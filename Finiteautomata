void main()
{
	int gd=DETECT,gm;
	initgraph(&gd,&gm,"C:\\TC\\BGI");
	setbkcolor(RED);
	setcolor(YELLOW);
	settextstyle(7,HORIZ_DIR,4);
	outtextxy(160,180,"!!  WELCOME   !!");
	outtextxy(35,280," Mini Project on Finite Automata");
       //	getch();
       delay(3000);
	cleardevice();
	closegraph();
	proj();
}
